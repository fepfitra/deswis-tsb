---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
---

<Layout>
	<Hero />
	<div id="wisata" class="h-[900px]">Destination</div>
	<div id="sejarah" class="h-[900px]">History</div>
	<div id="paket" class="h-[900px]">Packet</div>
	<div class="h-[900px]">Maps</div>
	<div id="galeri" class="h-[900px]">Gallery</div>
	<div id="testimoni" class="h-[900px]">Testimony</div>
	<div class="h-[900px]">Footer</div>
</Layout>
<script>
document.addEventListener('scroll', function() {
  const navbar = document.querySelector('nav');
  const heroSection = document.querySelector('#hero');
	if (!heroSection) return;
	const scrollPosition = window.scrollY;
	const transitionPoint = heroSection.offsetHeight * 0.8; 
	const opacity = Math.min(scrollPosition / transitionPoint, 1);

	if (opacity > 0.5) {
		navbar.classList.remove('text-white');
		navbar.classList.add('text-black');
	} else {
		navbar.classList.remove('text-black');
		navbar.classList.add('text-white');
	}
	
	if (opacity > 0.1) {
		navbar.classList.add('shadow-lg');
	} else {
		navbar.classList.remove('shadow-lg');
	}
	navbar.style.backgroundColor = `rgba(255, 255, 255, ${opacity})`;
});
</script>
