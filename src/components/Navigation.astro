---
const navLinks = [
    { name: "Potensi", href: "/#wisata" },
    { name: "Sejarah", href: "/#sejarah" },
    { name: "Paket", href: "/#paket" },
    { name: "Galeri", href: "/#galeri" },
    { name: "Kontak", href: "/#maps" }
]
---
<header id="main-header" class="fixed top-0 left-0 w-full z-50 transition-all duration-300 ease-in-out">
	<div class="container mx-auto flex items-center justify-between p-4">
		<a href="/" class="flex items-center gap-3 font-bold text-xl transition-transform hover:scale-105">
			<img src="/sendangbandung.webp" alt="Logo Taman Sendang Bandung" class="h-12 w-12 rounded-full"/>
			<span class="hidden sm:block">Taman Sendang Bandung</span>
		</a>
		<nav class="hidden lg:flex items-center gap-6">
			{navLinks.map(link => (
					<a href={link.href} class="font-semibold pb-1 border-b-2 border-transparent hover:border-current transition-colors">{link.name}</a>
			))}
		</nav>
		<button id="mobile-menu-btn" class="lg:hidden z-50 p-2 rounded-md hover:bg-white/10">
			<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
		</button>
	</div>
</header>

<div id="mobile-menu" class="fixed inset-0 bg-primary/95 backdrop-blur-lg z-40 hidden flex-col items-center justify-center gap-8">
	<button id="close-menu-btn" class="absolute top-5 right-5 text-white p-2">
		<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
	</button>
	{navLinks.map(link => (
		<a href={link.href} class="text-white text-3xl font-bold hover:text-accent transition-colors">{link.name}</a>
	))}
	<a href="/#paket" class="btn mt-8">Pesan Sekarang</a>
</div>

<style>
	#main-header {
		color: white;
		text-shadow: 0 1px 3px rgba(0,0,0,0.4);
	}

	#main-header[data-scrolled="true"] {
		background-color: rgba(255, 255, 255, 0.9);
		box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
		backdrop-filter: blur(8px);
		color: var(--color-text-dark);
		text-shadow: none;
	}
</style>

<script>
	const header = document.getElementById('main-header');
	const mobileMenuBtn = document.getElementById('mobile-menu-btn');
	const closeMenuBtn = document.getElementById('close-menu-btn');
	const mobileMenu = document.getElementById('mobile-menu');

	const toggleMenu = () => {
		mobileMenu.classList.toggle('hidden');
		mobileMenu.classList.toggle('flex');
	}

	window.addEventListener('scroll', () => {
		if (window.scrollY > 50) {
			header.dataset.scrolled = 'true';
		} else {
			header.dataset.scrolled = 'false';
		}
	});

	mobileMenuBtn.addEventListener('click', toggleMenu);
	closeMenuBtn.addEventListener('click', toggleMenu);
	mobileMenu.querySelectorAll('a').forEach(link => {
		link.addEventListener('click', toggleMenu);
	});
</script>
