---
import Section from './Section.astro';
import { potensi } from '../data/konfigurasi.js';
---
<Section id="wisata" className="bg-gray-50">
	<div class="flex flex-col items-center w-full text-center">
	<h2 class="text-3xl md:text-4xl font-bold">{potensi.title}</h2>
		<p class="mt-4 max-w-2xl text-lg text-gray-600">
			{potensi.subtitle || "Jelajahi potensi wisata kami yang kaya akan keindahan alam, budaya, dan tradisi. Setiap sudut desa kami menawarkan pengalaman unik yang tak terlupakan."}
		</p>
		
		<div class="mt-12 flex flex-wrap -mx-4 justify-center">
			{potensi.items.map((item) => (
				<div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/5 px-4 mb-8">
					<div class="card h-full flex flex-col items-center text-center p-6 bg-white !shadow-md">
						<div class="text-6xl mb-4">{item.icon}</div>
						<h3 class="font-bold text-lg text-gray-800 mb-2">{item.title}</h3>
						<p class="text-sm text-gray-600">{item.description}</p>
					</div>
				</div>
			))}
		</div>
	</div>
</Section>

