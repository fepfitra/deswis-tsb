---
import Section from './Section.astro';
import boro from '../assets/hero.jpg';

// It's better to use an array to avoid repeating code.
const galleryImages = [
    { src: boro.src, alt: "Scenery at Taman Sendang Bandung 1" },
    { src: boro.src, alt: "Scenery at Taman Sendang Bandung 2" },
    { src: boro.src, alt: "Scenery at Taman Sendang Bandung 3" },
    { src: boro.src, alt: "Scenery at Taman Sendang Bandung 4" },
    { src: boro.src, alt: "Scenery at Taman Sendang Bandung 5" },
    { src: boro.src, alt: "Scenery at Taman Sendang Bandung 6" },
];
---
<Section id="galeri" className="py-12 md:py-20">
    <div class="flex flex-col w-full text-center">
        <div class="mb-8 md:mb-12">
            <h2 class="font-bold text-2xl md:text-3xl">Galeri Foto</h2>
        </div>

        <div class="w-full lg:overflow-x-auto simple-scrollbar">
            <div class="flex flex-col lg:flex-row items-center gap-8 px-4">
                {galleryImages.map((image) => (
                    <div
                        class="w-full max-w-lg lg:w-[500px] h-[300px] lg:flex-shrink-0 bg-cover bg-center rounded-2xl shadow-lg hover:shadow-2xl hover:scale-[1.02] transition-all"
                        style={{ backgroundImage: `url(${image.src})` }}
                        aria-label={image.alt}
                    >
                    </div>
                ))}
            </div>
        </div>
    </div>
</Section>

<style>
.simple-scrollbar::-webkit-scrollbar {
    height: 8px;
}
.simple-scrollbar::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
}
.simple-scrollbar::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 10px;
}
.simple-scrollbar::-webkit-scrollbar-thumb:hover {
    background: #aaa;
}
</style>
